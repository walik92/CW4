<Window x:Class="CW4.Views.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CW4.Views"
        mc:Ignorable="d"
        Title="Zalogu się" Height="280" Width="300" ResizeMode="NoResize">
    <StackPanel Margin="20">
        <Label Content="Logowanie" HorizontalContentAlignment="Center" FontWeight="Bold" FontSize="15"></Label>
        <Label Content="Login" Padding="0"></Label>
        <TextBox  Margin="0,5,0,20" Name="LoginBox" />
        <Label Content="Hasło" Padding="0"></Label>
        <PasswordBox x:Name="PasswordBox" Margin="0,5,0,20" />
        <Button Content="Zaloguj się" Height="40" Click="Button_Click" Name="Button"  IsDefault="True" />
        <ProgressBar Height="20" Visibility="Collapsed" IsIndeterminate="True"  Name="ProgressBar"></ProgressBar>
    </StackPanel>
</Window>